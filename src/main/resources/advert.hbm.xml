<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.rest">
    <class name="ru.rest.Advert" table="adverts">
        <id name="id"  >
            <generator class="native" />
        </id>
        <property name="title" column="c_title" type="string" length="40" not-null="true"/>
    </class>
</hibernate-mapping>